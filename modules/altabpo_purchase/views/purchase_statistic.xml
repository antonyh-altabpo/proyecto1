<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List view -->
        <record id="purchase_statistic_tree_view" model="ir.ui.view">
            <field name="name">Purchase statistic tree view</field>
            <field name="model">purchase.statistic</field>
            <field name="arch" type="xml">
                <tree string="Product brands">
                    <field name="categ_id"/>
                    <field name="default_code"/>
                    <field name="description_purchase"/>
                    <field name="product_id"/>
                    <field name="analysis_date"/>
                    <field name="str_year"/>
                    <field name="m1"/>
                    <field name="m2"/>
                    <field name="m3"/>
                    <field name="m4"/>
                    <field name="m5"/>
                    <field name="m6"/>
                    <field name="m7"/>
                    <field name="m8"/>
                    <field name="m9"/>
                    <field name="m10"/>
                    <field name="m11"/>
                    <field name="m12"/>
                    <field name="current_month_projection"/>
                    <field name="average_sales"/>
                    <field name="qty_available"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="purchase_statistic_form_view" model="ir.ui.view">
            <field name="name">Purchase statistic form view</field>
            <field name="model">purchase.statistic</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="categ_id"/>
                                <field name="default_code"/>
                                <field name="qty_available"/>
                            </group>
                            <group>
                                <field name="analysis_date"/>
                                <field name="str_year"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Inovice line" name="all_sales">
                                <field name="account_move_line_ids">
                                    <tree default_order="settlement_date desc" editable="bottom" create="0" delete="1">
                                        <field name="partner_id"/>
                                        <field name="settlement_date"/>
                                        <field name="product_id"/>
                                        <field name="quantity" sum="Total Qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Months" name="months">
                                <group col="4">
                                    <group>
                                        <field name="m1"/>
                                        <field name="m2"/>
                                        <field name="m3"/>
                                    </group>
                                    <group>
                                        <field name="m4"/>
                                        <field name="m5"/>
                                        <field name="m6"/>
                                    </group>
                                    <group>
                                        <field name="m7"/>
                                        <field name="m8"/>
                                        <field name="m9"/>
                                    </group>
                                    <group>
                                        <field name="m10"/>
                                        <field name="m11"/>
                                        <field name="m12"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="current_month_projection"/>
                                        <field name="average_sales"/>
                                        <!--<field name="total_amount_year"/>-->
                                    </group>
                                    <group>
                                        <field name="current_break_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="purchase_statistic_action" model="ir.actions.act_window">
            <field name="name">Purchase statistic</field>
            <field name="res_model">purchase.statistic</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new purchase statistic!
                </p>
            </field>
        </record>

        <!-- Act Tree view -->
        <record id="purchase_statistic_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_statistic_tree_view"/>
            <field name="act_window_id" ref="purchase_statistic_action"/>
        </record>

        <!-- Act Form view -->
        <record id="purchase_statistic_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_statistic_form_view"/>
            <field name="act_window_id" ref="purchase_statistic_action"/>
        </record>

        <menuitem name="Purchase statistic"
                  parent="purchase.purchase_report" id="purchase_statistic_menu"
                  action="purchase_statistic_action" sequence="2"/>

    </data>
</odoo>
